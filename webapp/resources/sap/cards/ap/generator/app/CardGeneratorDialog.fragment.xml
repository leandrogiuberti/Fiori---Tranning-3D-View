<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" width="90%">
	<Dialog
		contentWidth="90%"
		contentHeight="75%"
		draggable="true"
		resizable="true"
		id="cardGeneratorDialog"
		beforeClose=".onBeforeDialogClosed"
	>
		<customHeader>
			<Bar design="Header">
				<contentMiddle>
					<Button
						icon="sap-icon://nav-back"
						press=".onBackButtonPress"
						visible="{= ${freeStyle>/isApplyServiceDetailsEnabled} &amp;&amp; !${freeStyle>/isServiceDetailsView} }"
					/>
					<Text text="{i18n>GENERATOR_CARD_GENERATOR} ({/title})" visible="{= !${freeStyle>/isServiceDetailsView}}" />
					<Text text="{i18n>SELECT_SERVICE_DETAILS}" visible="{freeStyle>/isServiceDetailsView}" />
					<ToolbarSpacer />
					<ToggleButton
						text="{i18n>GENERAL_SETTINGS_TITLE}"
						press=".toggleAdvancedSetting"
						visible="{= !${freeStyle>/isServiceDetailsView} }"
					/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<form:Form id="advanceServiceDeatils" visible="{freeStyle>/isServiceDetailsView}" editable="true" class="sapUiLargeMarginTop">
				<form:FormContainer>
					<form:FormElement>
						<form:label>
							<Label text="{i18n>SERVICE_TEXT}" labelFor="seviceSelectValue" required="true" />
						</form:label>
						<ComboBox
							id="seviceSelectValue"
							value="{freeStyle>/currentService}"
							change=".onServiceChange"
							required="true"
							items="{
								path: 'freeStyle>/serviceDetails',
								sorter: { path: 'labelWithValue' }
							}"
						>
							<core:Item key="{freeStyle>name}" text="{freeStyle>labelWithValue}" />
							<layoutData>
								<l:GridData span="XL5 L5 M5 S5" />
							</layoutData>
						</ComboBox>
					</form:FormElement>
					<form:FormElement>
						<form:label>
							<Label text="{i18n>ENTITYSET_PATH_TEXT}" labelFor="entitySetSelectValue" required="true" />
						</form:label>
						<ComboBox
							id="entitySetSelectValue"
							required="true"
							value="{freeStyle>/entitySet}"
							change=".onEntitySetPathChange"
							items="{
								path: 'freeStyle>/entities',
								sorter: { path: 'labelWithValue' }
							}"
						>
							<core:Item key="{freeStyle>name}" text="{freeStyle>labelWithValue}" />
							<layoutData>
								<l:GridData span="XL5 L5 M5 S5" />
							</layoutData>
						</ComboBox>
					</form:FormElement>
					<form:FormElement>
						<form:label>
							<Label text="{i18n>CONTEXT_PATH_TEXT}" labelFor="contextPathSelectValue" required="true" />
						</form:label>
						<ComboBox
							id="contextPathSelectValue"
							required="true"
							value="{freeStyle>/entitySetWithObjectContext}"
							change=".onContextPathChange"
							items="{
								path: 'freeStyle>/entitySetWithObjectContextList',
								sorter: { path: 'labelWithValue' }
							}"
						>
							<core:Item key="{freeStyle>name}" text="{freeStyle>labelWithValue}" />
							<layoutData>
								<l:GridData span="XL5 L5 M5 S5" />
							</layoutData>
						</ComboBox>
					</form:FormElement>
				</form:FormContainer>
				<form:layout>
					<form:ResponsiveGridLayout
						columnsXL="3"
						columnsL="3"
						columnsM="3"
						emptySpanXL="3"
						emptySpanL="3"
						emptySpanM="3"
						labelSpanXL="4"
						labelSpanL="4"
						labelSpanM="4"
						labelSpanS="12"
					/>
				</form:layout>
			</form:Form>
			<l:Splitter id="contentSplitter" height="700px" class="bg-light" visible="{= !${freeStyle>/isServiceDetailsView} }">
				<Page id="editor" showHeader="false">
					<VBox>
						<Text
							text="{i18n>CARD_SETTINGS_TITLE}"
							class="sapUiSmallMargin sapUiNoMarginBottom sapUiResponsiveMargin sapMTitle sapMTitleStyleH4"
							maxLines="1"
						/>
						<FlexBox direction="Column">
							<items>
								<Panel expandable="false" width="auto" class="sapUiSmallMargin" headerText="{i18n>GENERATOR_CARD_HEADER}">
									<content>
										<core:Fragment
											fragmentName="sap.cards.ap.generator.app.fragments.configuration.Header"
											type="XML"
										/>
									</content>
								</Panel>
								<Panel
									expanded="true"
									stickyHeader="true"
									expandable="true"
									width="auto"
									class="sapUiSmallMargin"
									headerText="{i18n>GENERATOR_CARD_CONTENT}"
								>
									<content>
										<core:Fragment
											fragmentName="sap.cards.ap.generator.app.fragments.configuration.ObjectGroup"
											type="XML"
										/>
									</content>
								</Panel>
								<Panel
									expanded="true"
									stickyHeader="true"
									expandable="true"
									width="auto"
									class="sapUiSmallMargin"
									headerText="{i18n>GENERATOR_CARD_FOOTER}"
								>
									<content>
										<core:Fragment
											fragmentName="sap.cards.ap.generator.app.fragments.configuration.Footer"
											type="XML"
										/>
									</content>
								</Panel>
							</items>
						</FlexBox>
					</VBox>
				</Page>
				<Page showHeader="false">
					<core:Fragment fragmentName="sap.cards.ap.generator.app.fragments.CardPreview" type="XML" />
				</Page>
			</l:Splitter>
		</content>
		<buttons>
			<Button
				text="{i18n>APPLY_SERVICE_DETAILS_TEXT}"
				visible="{freeStyle>/isServiceDetailsView}"
				enabled="{freeStyle>/isApplyServiceDetailsEnabled}"
				press=".applyServiceDetails"
			/>
			<Button text="{i18n>GENERATOR_SAVE}" type="Emphasized" press=".okPressed" visible="{= !${freeStyle>/isServiceDetailsView}}" />
			<Button text="{i18n>GENERATOR_CLOSE}" press=".cancelPressed" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>
