<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<FlexBox alignItems="Start" justifyContent="Start">
		<Label
			required="true"
			id="labelTitle"
			text="{i18n>GENERATOR_CARD_TITLE}"
			labelFor="titleTextInput"
			class="sapUiTinyMarginTop sapUiSmallMarginEnd"
			width="100px"
		/>
		<Label text=":" class="sapUiTinyMarginTop sapUiSmallMarginEnd" />
		<ComboBox
			id="titleTextInput"
			value="{/configuration/title}"
			change=".onTitleSelection"
			items="{
                path: '/configuration/properties',
                sorter: { path: 'label', descending: false },
                length : 500
            }"
		>
			<core:Item key="{name}" text="{labelWithValue}" />
		</ComboBox>
	</FlexBox>
	<FlexBox alignItems="Start" justifyContent="Start">
		<FlexBox alignItems="Start" justifyContent="Start" class="sapUiSmallMarginEnd">
			<Label
				id="labelSubTitle"
				text="{i18n>GENERATOR_CARD_SUB_TITLE}"
				labelFor="subTitleTextInput"
				class="sapUiTinyMarginTop sapUiSmallMarginEnd"
				width="100px"
			/>
			<Label text=":" class="sapUiTinyMarginTop sapUiSmallMarginEnd" />
			<ComboBox
				id="subTitleTextInput"
				value="{/configuration/subtitle}"
				change=".onSubTitleSelection"
				items="{
                    path: '/configuration/properties',
                    sorter: { path: 'label',descending: false },
                    length : 500
                }"
			>
				<core:Item key="{name}" text="{labelWithValue}" />
			</ComboBox>
		</FlexBox>
		<FlexBox alignItems="Start" justifyContent="Start">
			<Label id="labelHeaderUOM" text="|" labelFor="headerUomTextCombo" class="sapUiTinyMarginTop sapUiSmallMarginEnd" />
			<ComboBox
				id="headerUomTextCombo"
				value="{/configuration/headerUOM}"
				change=".onHeaderUOMSelection"
				items="{
                    path: '/configuration/properties',
                    sorter: { path: 'label',descending: false },
                    length : 500
                }"
			>
				<core:Item key="{name}" text="{labelWithValue}" />
			</ComboBox>
		</FlexBox>
	</FlexBox>
	<FlexBox alignItems="Start" justifyContent="Start" class="sapUiMediumMarginBottom">
		<Label
			id="labelStateIndicator"
			text="{i18n>GENERATOR_MAIN_INDICATOR}"
			labelFor="titleStateIndicator"
			class="sapUiTinyMarginTop sapUiSmallMarginEnd"
			width="100px"
		/>
		<Label text=":" class="sapUiTinyMarginTop sapUiSmallMarginEnd" />
		<ComboBox
			id="titleStateIndicator"
			value="{/configuration/mainIndicatorStatusUnit}"
			change=".onStateIndicatorSelection"
			items="{
                path: '/configuration/propertiesWithNavigation',
                sorter: [{ path: 'category', descending: true, group: true }, {path: 'label', descending: false}],
                length : 500
            }"
		>
			<core:Item key="{name}" text="{labelWithValue}" />
		</ComboBox>
		<ComboBox
			id="headerNavigationSelector"
			visible="{= !!${/configuration/selectedNavigationPropertyHeader/value}.length}"
			value="{/configuration/mainIndicatorNavigationSelectedValue}"
			change=".updateHeaderNavigationSelection"
			items="{
                path: '/configuration/selectedNavigationPropertyHeader/value',
                sorter: { path: 'label', descending: false },
                length : 500
            }"
			class="sapUiTinyMarginBegin"
		>
			<core:Item key="{name}" text="{labelWithValue}" />
		</ComboBox>
		<Button
			enabled="true"
			type="{= ${hasActions} ? 'Ghost' : 'Transparent'}"
			icon="sap-icon://overflow"
			press=".onPropertyFormatting"
			class="sapUiTinyMarginBegin"
		/>
	</FlexBox>
</core:FragmentDefinition>
