<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<ResponsivePopover
		id="additionalFormattingPopover"
		placement="Bottom"
		initialFocus="url"
		afterClose=".onPopoverClose"
		showHeader="false"
	>
		<content>
			<SelectList itemPress=".onFormatTypeSelection">
				<core:Item
					key="uom"
					enabled="{/configuration/advancedFormattingOptions/isUoMEnabled}"
					text="{= ${/configuration/advancedFormattingOptions/isUOMApplied} ? ${i18n>MODIFY_UOM_TEXT} : ${i18n>ASSIGN_UOM_TEXT}}"
				/>
				<core:Item
					key="formatter"
					enabled="{/configuration/advancedFormattingOptions/isFormatterEnabled}"
					text="{= ${/configuration/advancedFormattingOptions/isFormatterApplied} ? ${i18n>MODIFY_FORMATTER_TEXT} : ${i18n>ASSIGN_FORMATTER_TEXT}}"
				/>
				<core:Item
					key="criticality"
					text="{= ${/configuration/advancedFormattingOptions/isCriticalityApplied} ? ${i18n>MODIFY_CRITICALITY_TEXT} : ${i18n>ASSIGN_CRITICALITY_TEXT}}"
				/>
				<core:Item
					key="trend"
					enabled="{= ${/configuration/advancedFormattingOptions/isTrendEnabled} ? true : false}"
					text="{= ${/configuration/advancedFormattingOptions/isTrendApplied} ? ${i18n>MODIFY_TREND_TEXT} : ${i18n>ASSIGN_TREND_TEXT}}"
				/>
				<core:Item
					key="indicators"
					text="{= ${/configuration/advancedFormattingOptions/isIndicatorsApplied} ? ${i18n>MODIFY_INDICATORS_TEXT} : ${i18n>ASSIGN_INDICATORS_TEXT}}"
				/>
			</SelectList>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>
