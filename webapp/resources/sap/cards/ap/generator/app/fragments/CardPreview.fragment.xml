<core:FragmentDefinition xmlns:w="sap.ui.integration.widgets" xmlns:core="sap.ui.core" xmlns="sap.m">
	<VBox justifyContent="Center">
		<Text
			text="{i18n>CARD_PREVIEW_TITLE}"
			class="sapUiSmallMargin sapUiNoMarginBottom sapUiResponsiveMargin sapMTitle sapMTitleStyleH4"
			maxLines="1"
		/>
		<HBox justifyContent="Center">
			<ComboBox
				id="preview-select"
				width="250px"
				class="sapUiSmallMargin"
				selectedKey="int-default"
				selectionChange=".onPreviewTypeChange"
				items="{
                        path: 'previewOptions>/hosts'
                    }"
			>
				<core:Item key="{previewOptions>key}" text="{path:'previewOptions>text', formatter: '.getTranslatedText'}" />
			</ComboBox>
		</HBox>
		<FlexBox id="custom-entry" alignItems="Center" justifyContent="Center" visible="false" class="sapUiTinyMargin sapUiNoMarginTop">
			<Input placeholder="{i18n>GENERATOR_AUTO}" id="widthInput" width="3.5rem" liveChange=".onWidthChange" />
			<Label text="x" class="sapUiTinyMargin" labelFor="heightInput" />
			<Input placeholder="{i18n>GENERATOR_AUTO}" id="heightInput" width="3.5rem" liveChange=".onHeightChange" />
			<Button press=".onResetPressed" icon="sap-icon://reset" class="sapUiTinyMargin" />
		</FlexBox>
		<HBox justifyContent="Center">
			<w:Card id="cardPreview" class="cardStyle" width="500px" />
		</HBox>
		<HBox id="adaptiveCardPreviewContainer" justifyContent="Center" visible="false" renderType="Bare">
			<!-- <custom:AdaptiveCard id="adaptiveCardPreview"></custom:AdaptiveCard> -->
			<core:HTML content='&lt;div style=&quot;min-width: 400px;&quot; id=&quot;adaptiveCardPreview&quot;&gt;&lt;/div&gt;' />
		</HBox>
	</VBox>
</core:FragmentDefinition>
