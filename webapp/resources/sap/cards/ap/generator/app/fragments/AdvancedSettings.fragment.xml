<core:FragmentDefinition
	xmlns:w="sap.ui.integration.widgets"
	xmlns:custom="sap.cards.ap.generator.app.controls"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
>
	<VBox justifyContent="Center">
		<VBox class="sapUiSmallMargin sapUiNoMarginBottom sapUiResponsiveMargin">
			<Text text="{i18n>GENERAL_SETTINGS_TITLE}" class="sapUiTinyMarginBottom sapMTitle sapMTitleStyleH4" maxLines="1" />
			<Text text="{i18n>GENERAL_SETTINGS_DESCRIPTION}" class="sapMText" wrapping="true" maxLines="2" />
		</VBox>
		<Panel expandable="false" width="auto" class="sapUiSmallMargin" headerText="{i18n>GENERATOR_CRITICALITY_ASSIGNEMENTS}">
			<content>
				<custom:CriticalityEditor
					selectionKeys="{path: '/configuration/properties', parameters: {name:'name', label:'labelWithValue'} }"
					navigationSelectionKeys="{path: '/configuration/propertiesWithNavigation', parameters: {name:'name', label:'labelWithValue'} }"
					items="{path: '/configuration/mainIndicatorOptions/criticality', parameters: {name:'name', value:'criticality', calculation:'criticalityCalculation'} }"
					change="onCriticalityChange"
				/>
			</content>
		</Panel>
		<Panel expandable="false" width="auto" class="sapUiSmallMargin" headerText="{i18n>GENERATOR_UOM}">
			<content>
				<custom:ArrangementsEditor
					mode="uom"
					selectionKeys="{path: '/configuration/properties', parameters: {name:'name', label:'labelWithValue'} }"
					navigationSelectionKeys="{path: '/configuration/propertiesWithNavigation', parameters: {name:'name', label:'labelWithValue'} }"
					items="{path: '/configuration/advancedFormattingOptions/unitOfMeasures', parameters: {name:'name', value:'uom'} }"
					change="onArrangementsChange"
				/>
			</content>
		</Panel>
		<Panel expandable="false" width="auto" class="sapUiSmallMargin" headerText="{i18n>GENERATOR_TEXT_ARRANGEMENTS}">
			<content>
				<custom:ArrangementsEditor
					mode="text"
					selectionKeys="{path: '/configuration/properties', parameters: {name:'name', label:'labelWithValue'} }"
					navigationSelectionKeys="{path: '/configuration/propertiesWithNavigation', parameters: {name:'name', label:'labelWithValue'} }"
					items="{path: '/configuration/advancedFormattingOptions/textArrangements', parameters: {name:'name', value:'uom',textArrangement:'textArrangement'} }"
					change="onArrangementsChange"
				/>
			</content>
		</Panel>
	</VBox>
</core:FragmentDefinition>
