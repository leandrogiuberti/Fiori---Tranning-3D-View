<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.components.shell.Settings.appearance.Appearance">
    <IconTabBar ariaTexts="{/ariaTexts}" id="idIconTabBar" expandable="false">
        <items>
            <IconTabFilter text="{i18n>AppearanceThemeMenu}" key="themeListTab">
                <MessageStrip
                    text="{i18n>DeprecatedThemeWarning}"
                    type="Warning"
                    visible="{/deprecatedThemeSelected}"
                    showIcon="true"
                    showCloseButton="false"
                    class="sapUiTinyMarginBottom" />
                <List
                    items="{
                        path: '/options',
                        sorter: [{
                            path: 'setId',
                            descending: false,
                            group: true
                        }, {
                            path: 'contrast',
                            descending: true
                        }, {
                            path: 'colorScheme',
                            descending: true
                        }, {
                            path: 'name',
                            descending: false
                        }],
                        groupHeaderFactory: '.getThemeSetHeader'
                    }"
                    includeItemInSelection="true"
                    mode="{= ${config>/themeConfigurable} ? 'SingleSelectMaster' : 'None'}"
                    id="themeList">
                    <items>
                        <CustomListItem selected="{isSelected}" accDescription="{name}">
                            <customData>
                                <core:CustomData key="themeid" value="{id}" writeToDom="true" />
                            </customData>
                            <FlexBox alignItems="Center" height="3.75rem">
                                <core:Icon
                                    class="sapUiSmallMarginBeginEnd"
                                    width="3rem"
                                    src="{icon}"
                                    visible="{= !${avatar}}"
                                    size="1.75rem" />
                                <Image
                                    class="sapUiSmallMarginBeginEnd"
                                    src="{avatar}"
                                    mode="{mode}"
                                    visible="{= !!${avatar}}"
                                    height="50px"
                                    width="50px"
                                    error=".onAvatarError"
                                    decorative="true" />
                                <Text
                                    class="sapUiSmallMarginEnd"
                                    maxLines="3"
                                    text="{name}">
                                    <layoutData><FlexItemData growFactor="1" /></layoutData>
                                </Text>
                                <ObjectStatus
                                    class="sapUiSmallMarginEnd"
                                    text="{i18n>AppearanceThemeDeprecated}"
                                    visible="{deprecated}"
                                    state="Warning" />
                            </FlexBox>
                        </CustomListItem>
                    </items>
                </List>
            </IconTabFilter>
            <IconTabFilter
                id="DisplaySettingsTab"
                key="displaySettingsTab"
                visible="{config>/displaySettingsTabVisible}"
                text="{i18n>AppearanceLayoutAndBehaviorMenu}">
                <Panel>
                    <CheckBox
                        id="showContentProviderInfoOnVisualizationsCheckbox"
                        text="{i18n>AppearanceShowContentProviderInfoOnVisualizationsLabel}"
                        visible="{config>/showContentProviderInfoOnVisualizationsConfigurable}"
                        selected="{config>/showContentProviderInfoOnVisualizationsSelected}" />
                    <VBox
                        class="sapUshellFlpSettingsDescriptionBorder"
                        visible="{config>/showContentProviderInfoOnVisualizationsConfigurable}">
                        <Text
                            class="sapUshellFlpSettingsDescription sapUshellFlpSettingsWide"
                            text="{i18n>AppearanceShowContentProviderInfoOnVisualizationsText}"/>
                    </VBox>
                    <CheckBox
                        id="contentDensityCheckBox"
                        text="{i18n>AppearanceContentDensityLabel}"
                        visible="{config>/contentDensityConfigurable}"
                        selected="{config>/isCozyContentMode}" />
                    <VBox
                        class="sapUshellFlpSettingsDescriptionBorder"
                        visible="{config>/contentDensityConfigurable}">
                        <Text
                            class="sapUshellFlpSettingsDescription sapUshellFlpSettingsWide"
                            text="{i18n>appearanceCompactCozyDescriptionText}"/>
                    </VBox>
                    <HBox
                        class="sapUiTinyMarginBegin"
                        alignItems="Center"
                        visible="{config>/sizeBehaviorConfigurable}">
                        <Label
                            id="sapUshellAppearanceTileSizeLabel"
                            class="sapUiSmallMarginEnd"
                            text="{i18n>AppearanceTileSizeLabel}"
                            textAlign="{config>/textAlign}"
                            labelFor="tileSizeRadioButtonGroup" />
                        <RadioButtonGroup selectedIndex="{config>/tileSize}" id="tileSizeRadioButtonGroup">
                            <buttons>
                                <RadioButton
                                    text="{i18n>AppearanceTileSizeSmall}"
                                    ariaLabelledBy="sapUshellAppearanceTileSizeLabel" />
                                <RadioButton
                                    text="{i18n>AppearanceTileSizeLarge}"
                                    ariaLabelledBy="sapUshellAppearanceTileSizeLabel" />
                            </buttons>
                        </RadioButtonGroup>
                    </HBox>
                    <VBox
                        class="sapUshellFlpSettingsDescriptionBorder"
                        visible="{config>/sizeBehaviorConfigurable}">
                        <Text
                            class="sapUshellFlpSettingsDescription sapUshellFlpSettingsWide"
                            text="{i18n>appearanceTileSizeDescriptionText}"/>
                    </VBox>
                </Panel>
            </IconTabFilter>
        </items>
    </IconTabBar>
</mvc:View>
