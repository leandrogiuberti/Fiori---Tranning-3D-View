<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{
        mLibrary: 'sap/m/library'
    }">
    <VBox width="{= %{viewConfiguration>/renderMode} === 'Popover' ? '20rem' : ''}" renderType="{= mLibrary.FlexRendertype.Div}" id="allSpacesSideMenu">
        <Toolbar style="Clear">
            <Button type="Back" press="onPressNavigateBackToSideNav" />
        </Toolbar>
        <ScrollContainer width="100%" height="100%" vertical="true">
            <core:ComponentContainer
                id="NavigationBarMenuComponentContainer"
                manifest="true"
                async="true"
                propagateModel="true"
                lifecycle="Container"
            />
        </ScrollContainer>
    </VBox>
</core:FragmentDefinition>
