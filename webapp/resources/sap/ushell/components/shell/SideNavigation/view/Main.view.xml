<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    controllerName="sap.ushell.components.shell.SideNavigation.controller.SideNavigation"
    displayBlock="true"
    height="100%"
    visible="{shellModel>/sideNavigation/visible}"
    core:require="{
        mLibrary: 'sap/m/library',
        tntLibrary: 'sap/tnt/library'
    }">
    <NavContainer id="navContainer" class="sapUshellSideNavigationPositionRelative sapUshellSideNavigationNavContainer">
        <tnt:SideNavigation
            id="sideNavigation"
            selectedKey="{viewConfiguration>/selectedKey}"
            expanded="{viewConfiguration>/expanded}"
            width="{= %{viewConfiguration>/renderMode} === 'Popover' ? '20rem' : ''}"
            design="{= %{viewConfiguration>/renderMode} === 'Popover' ? tntLibrary.SideNavigationDesign.Plain : tntLibrary.SideNavigationDesign.Decorated}"
        >
            <tnt:customData>
                <core:CustomData
                    key="sap-ui-fastnavgroup"
                    value="true"
                    writeToDom="true"
                />
            </tnt:customData>
        </tnt:SideNavigation>
    </NavContainer>
</mvc:View>
