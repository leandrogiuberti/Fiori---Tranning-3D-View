<mvc:View xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    controllerName="sap.ushell.components.shell.MenuBar.controller.MenuBar"
    displayBlock="true">
    <tnt:ToolHeader
        id= "navigationBar"
        class="sapUshellShellToolHeader">
        <core:ComponentContainer
            manifest="true"
            async="true"
            propagateModel="true"
            name="sap.ushell.components.shell.NavigationBarMenu"
            lifecycle="Container"
            id="navigationBarMenu" />
        <IconTabHeader
            class="sapUshellShellTabBar"
            ariaTexts="{viewConfiguration>/ariaTexts}"
            mode="Inline"
            items="{
                path: 'menu>/',
                filters: { path: 'pinned', operator: 'EQ', value1: true },
                sorter: { path: 'pinnedSortOrder', descending: false },
                factory: '._menuFactory'
            }"
            selectedKey="{viewConfiguration>/selectedKey}"
            select=".onMenuItemSelection">
        </IconTabHeader>
        <tnt:customData>
            <core:CustomData
                key="sap-ui-fastnavgroup"
                value="true"
                writeToDom="true"/>
        </tnt:customData>
    </tnt:ToolHeader>
</mvc:View>
