<mvc:View
    controllerName="sap.ushell.components.shell.Notifications.NotificationsList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:thirdparty="sap.ushell.gen.ui5.webcomponents-fiori.dist"
    xmlns:thirdpartywc="sap.ushell.gen.ui5.webcomponents.dist"
    core:require="{
        formatMessage: 'sap/base/strings/formatMessage',
        Utils: 'sap/ushell/utils',
        mobileLibrary: 'sap/m/library'
    }"
>
    <thirdparty:NotificationList
        id="sapUshellNotificationsList"
        class="sapUshellNotificationsList sapContrastPlus"
        itemClick=".onNotificationPress"
        items="{
            path: '/notifications',
            filters: { path: 'items/length', operator: 'GT', value1: 0 },
            templateShareable: false
        }"
    >
        <thirdparty:NotificationListGroupItem
            items="{
                path: 'items',
                templateShareable: false
            }"
            titleText="{titleText}"
        >
            <thirdparty:NotificationListItem
                titleText="{= ${SensitiveText} ? ${SensitiveText} : ${Text} }"
                showClose="true"
                close=".onNotificationRemovePress"
                importance="{= ${Priority}.toUpperCase() === 'HIGH' ? 'Important' : 'Standard'}"
                text="{SubTitle}"
                read="{= !!${IsRead} }"
            >
                <thirdparty:footnotes>
                    <thirdpartywc:Label text="{path: 'CreatedAt', formatter: 'Utils.formatDate'}" wrappingType="None" />
                </thirdparty:footnotes>
                <thirdparty:menu>
                    <thirdpartywc:Menu
                        visible="{= !!${Actions} &amp;&amp; ${Actions}.length &gt; 0}"
                        items="{path: 'Actions', templateShareable: false}"
                        itemClick=".onNotificationActionPress"
                    >
                        <thirdpartywc:MenuItem text="{ActionText}">
                        </thirdpartywc:MenuItem>
                    </thirdpartywc:Menu>
                </thirdparty:menu>
            </thirdparty:NotificationListItem>
        </thirdparty:NotificationListGroupItem>
    </thirdparty:NotificationList>
    <VBox
        class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"
        width="auto"
        alignItems="Stretch">
        <Button
            id="sapUshellNotificationsListMoreButton"
            text="{i18n>Notifications.Popover.Button.LoadMore}"
            width="100%"
            press=".onLoadMorePress"
            visible="{= ${/hasMoreItemsInBackend} &amp;&amp; !${/listMaxReached} }"
        />
    </VBox>
    <IllustratedMessage
        id="sapUshellNotificationsListNoData"
        illustrationType="{= mobileLibrary.IllustratedMessageType.NoNotifications}"
        title="{i18n>Notifications.Popover.NoData.Title}"
        description="{i18n>Notifications.Popover.NoData.Description}"
        visible="{parts: ['/hasMoreItemsInBackend', '/listMaxReached', '/notifications'], formatter: '.formatShowNoDataIllustration'}"
        ariaTitleLevel="H3">
        <additionalContent>
            <Button
                id="sapUshellNotificationsListNoDataSettingsButton"
                text="{i18n>Notifications.Popover.NoData.Button}"
                press=".onSettingsPress"
                type="Transparent"
                visible="{/settingsAvailable}"
            />
        </additionalContent>
    </IllustratedMessage>
</mvc:View>
