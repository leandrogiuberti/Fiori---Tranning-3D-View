<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="sapUshellUserActionsMenuPopover"
        placement="Bottom"
        showArrow="true"
        showHeader="false"
        class="sapUshellPopupContainer sapContrastPlus"
    >
        <content>
            <List
                class="sapUshellPopoverList"
                showSeparators="None"
                includeItemInSelection="true"
                items="{
                    path: 'shellModel>/userActions/items',
                    factory: '.userActionsMenuPopoverItemFactory',
                    filters: [{
                        path: '',
                        caseSensitive: true,
                        test: '.filterUserActions'
                    }]
                }"
            >
                <headerToolbar>
                    <Toolbar style="Clear">
                        <Title
                            titleStyle="H4"
                            level="H1"
                            text="{/userName}"
                        >
                            <customData>
                                <core:CustomData
                                    xmlns:core="sap.ui.core"
                                    key="help-id"
                                    value="UserActionsMenu-UserName"
                                    writeToDom="true"
                                />
                            </customData>
                        </Title>
                    </Toolbar>
                </headerToolbar>
                <infoToolbar>
                    <Toolbar
                        class="sapUiTinyMarginBegin"
                        style="Standard"
                        design="Transparent"
                    >
                        <Title
                            titleStyle="H5"
                            level="H2"
                            text="{/identifier}"
                        >
                            <customData>
                                <core:CustomData
                                    xmlns:core="sap.ui.core"
                                    key="help-id"
                                    value="UserActionsMenu-UserIdentifier"
                                    writeToDom="true"
                                />
                            </customData>
                        </Title>
                    </Toolbar>
                </infoToolbar>
            </List>
        </content>
    </Popover>
</core:FragmentDefinition>
