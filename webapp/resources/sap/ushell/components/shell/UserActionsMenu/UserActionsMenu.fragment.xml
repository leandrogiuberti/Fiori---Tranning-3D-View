<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:thirdparty="sap.ushell.gen.ui5.webcomponents-fiori.dist"
    core:require="{
        iconSettings: 'sap/ushell/thirdparty/ui5/webcomponents-icons/AllIcons'
    }"
>
    <thirdparty:UserMenu
        opener="userActionsMenuHeaderButton"
        id="sapUshellUserActionsMenuPopover"
        menuItems="{
            path: 'shellModel>/userActions/items',
            factory: '.userActionsMenuItemFactory',
            filters: [{
                path: '',
                caseSensitive: true,
                test: '.filterUserActions'
            }]}"
        signOutClick=".logout"
        itemClick=".onItemPress"
    >
        <thirdparty:accounts>
            <thirdparty:UserMenuAccount
                titleText="{/userName}"
                avatarSrc="{configModel>/userImage/personPlaceHolder}"
                avatarInitials="{/initials}"
                subtitleText="{/identifier}"
                description="{/userEmail}"
                selected="true"
            />
        </thirdparty:accounts>
    </thirdparty:UserMenu>
</core:FragmentDefinition>
