<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    id="NavigationBarMenuButton"
    controllerName="sap.ushell.components.shell.NavigationBarMenu.controller.NavigationBarMenuButton">
    <Button
        id="NavigationBarMenuButtonControl"
        icon="sap-icon://menu2"
        enabled="{viewConfiguration>/enableMenuBarNavigation}"
        press=".openNavigationBarMenuPopover"
        tooltip="{i18n>NavigationBarMenu.Button.OpenPopover}"
        ariaHasPopup="Dialog">
        <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
        </layoutData>
        <customData>
            <core:CustomData
                key="help-id"
                value="shell-navigationBarPersonalizationButton"
                writeToDom="true" />
        </customData>
    </Button>
</mvc:View>
