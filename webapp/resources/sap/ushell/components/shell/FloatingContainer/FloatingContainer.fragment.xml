<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:floatingContainer="sap.ushell.components.shell.FloatingContainer.controls"
    core:require="{
        BindingHelper: 'sap/ushell/state/BindingHelper'
    }">
    <floatingContainer:FloatingContainer
        id="shell-floatingContainer"
        visible="{/floatingContainer/visible}"
        fullHeight="{/containerStyles/fullHeight}"
        content="{
            path: 'shellModel>/floatingContainer/items',
            factory: 'BindingHelper.factory'
        }">
    </floatingContainer:FloatingContainer>
</core:FragmentDefinition>
