<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.components.runtimeSwitcher.controller.RuntimeSwitcher"
    height="100%"
    core:require="{
        mobileLibrary: 'sap/m/library'
    }">
    <NavContainer id="switcherNavContainer">
        <Page
            id="emptyPage"
            showHeader="false"
            backgroundDesign="{= mobileLibrary.PageBackgroundDesign.Transparent }"/>

        <Page
            id="pagesRuntime"
            enableScrolling="false"
            showHeader="false"
            backgroundDesign="{= mobileLibrary.PageBackgroundDesign.Transparent }"/>

        <Page
            id="workpagesRuntime"
            enableScrolling="false"
            showHeader="false"
            backgroundDesign="{= mobileLibrary.PageBackgroundDesign.Transparent }"/>
    </NavContainer>
</mvc:View>
