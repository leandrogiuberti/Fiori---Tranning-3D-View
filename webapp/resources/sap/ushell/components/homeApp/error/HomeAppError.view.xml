<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:launchpad="sap.ushell.ui.launchpad"
    controllerName="sap.ushell.components.homeApp.error.HomeAppError"
    height="100%">
    <IllustratedMessage
        id="errorPage"
        illustrationType="sapIllus-UnableToLoad"
        enableDefaultTitleAndDescription="false"
        icon="{/icon}"
        title="{/text}"
        description="{/description}">
        <additionalContent>
            <Button
                text="{i18n>HomeApp.CannotLoadApp.CopyButton}"
                press=".onCopyErrorDetailsPress" />
        </additionalContent>
    </IllustratedMessage>
</mvc:View>