<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    core:require="{
        coreLibrary: 'sap/ui/core/library',
        mobileLibrary: 'sap/m/library'
    }">
    <Dialog
        id="aboutDialog"
        title="{i18n>about}"
        class="sapUshellUserSetting sapContrastPlus"
        contentHeight="42rem"
        contentWidth="62rem"
        afterClose=".onAfterClose"
        beforeOpen=".onBeforeOpen"
        stretch="{device>/system/phone}">
        <customHeader>
            <Bar id="aboutBar">
                <contentLeft>
                    <Button id="aboutDialogNavBackButton"
                        icon="sap-icon://nav-back"
                        press=".navigateBackToMaster"
                        tooltip="{i18n>ToggleButtonShow}"
                        visible="false" />
                    <ToggleButton id="aboutDialogMenuButton"
                        icon="sap-icon://menu2"
                        press=".navToggleButtonPressHandler"
                        tooltip="{i18n>ToggleButtonShow}"
                        visible="false" />
                </contentLeft>
                <contentMiddle>
                    <Title
                        text="{i18n>about}" />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <Page
                showHeader="false"
                class="sapUshellAboutPage">
                <content>
                    <SplitContainer id="aboutDialogContainer"
                        initialDetail="aboutDialogDetail"
                        defaultTransitionNameDetail="show"
                        afterMasterClose=".onAfterMasterClose"
                        beforeMasterOpen=".onBeforeMasterOpen">
                        <masterPages>
                            <Page
                                id="aboutDialogMaster"
                                class="sapUshellUserSettingMaster"
                                showHeader="false">
                                <content>
                                    <List id="aboutDialogEntryList"
                                        itemPress=".onItemPress"
                                        mode="{= mobileLibrary.ListMode.SingleSelectMaster}">
                                        <items>
                                            <StandardListItem
                                                title="{i18n>aboutCategoryApplication}"
                                                type="Active"
                                                icon="sap-icon://header"
                                                custom:to="aboutDialogDetailApplication"
                                                wrapping="true" />
                                            <StandardListItem
                                                title="{i18n>aboutCategorySystem}"
                                                icon="sap-icon://wrench"
                                                type="Active"
                                                custom:to="aboutDialogDetailSystem"
                                                wrapping="true" />
                                            <StandardListItem
                                                title="{i18n>aboutCategoryEnvironment}"
                                                icon="sap-icon://desktop-mobile"
                                                type="Active"
                                                custom:to="aboutDialogDetailEnvironment"
                                                wrapping="true" />
                                        </items>
                                    </List>
                                </content>
                            </Page>
                        </masterPages>
                        <detailPages>
                            <Page
                                id="aboutDialogDetailApplication"
                                showHeader="false">
                                <content>
                                    <ObjectHeader
                                        title="{i18n>aboutCategoryApplication}"
                                        titleLevel="{= coreLibrary.TitleLevel.H3}"
                                        backgroundDesign="Solid"
                                        class="sapUshellUserSettingDetailHeader"/>
                                    <VBox class="sapUiSmallMargin">
                                        <form:SimpleForm
                                            id="aboutDialogApplicationForm"
                                            editable="false"
                                            layout="ColumnLayout"
                                            columnsM="2"
                                            columnsL="2"
                                            columnsXL="2"
                                            content="{
                                                path: 'AppInfo>/entries',
                                                factory: '.itemFactory'
                                            }">
                                        </form:SimpleForm>
                                    </VBox>
                                    <VBox class="sapUiSmallMargin">
                                        <form:SimpleForm
                                            id="aboutDialogApplicationFormCustomValues"
                                            editable="false"
                                            layout="ColumnLayout"
                                            columnsM="2"
                                            columnsL="2"
                                            columnsXL="2"
                                            content="{
                                                path: 'AppInfo>/customEntries',
                                                factory: '.itemFactory'
                                            }">
                                        </form:SimpleForm>
                                    </VBox>
                                </content>
                            </Page>
                            <Page
                                id="aboutDialogDetailSystem"
                                showHeader="false">
                                <content>
                                    <ObjectHeader
                                        title="{i18n>aboutCategorySystem}"
                                        titleLevel="{= coreLibrary.TitleLevel.H3}"
                                        backgroundDesign="Solid"
                                        class="sapUshellUserSettingDetailHeader"/>
                                    <VBox class="sapUiSmallMargin">
                                        <form:SimpleForm
                                            id="aboutDialogSystemForm"
                                            editable="false"
                                            layout="ColumnLayout"
                                            columnsM="2"
                                            columnsL="2"
                                            columnsXL="2"
                                            content="{
                                                path: 'SysInfo>/entries',
                                                factory: '.itemFactory'
                                            }">
                                        </form:SimpleForm>
                                    </VBox>
                                </content>
                            </Page>
                            <Page
                                id="aboutDialogDetailEnvironment"
                                showHeader="false">
                                <content>
                                    <ObjectHeader
                                        title="{i18n>aboutCategoryEnvironment}"
                                        titleLevel="{= coreLibrary.TitleLevel.H3}"
                                        backgroundDesign="Solid"
                                        class="sapUshellUserSettingDetailHeader"/>
                                    <VBox class="sapUiSmallMargin">
                                        <form:SimpleForm
                                            id="aboutDialogUserForm"
                                            editable="false"
                                            layout="ColumnLayout"
                                            columnsM="2"
                                            columnsL="2"
                                            columnsXL="2"
                                            content="{
                                                path: 'UserEnvInfo>/entries',
                                                factory: '.itemFactory'
                                            }">
                                        </form:SimpleForm>
                                    </VBox>
                                </content>
                            </Page>
                        </detailPages>
                    </SplitContainer>
                </content>
            </Page>
        </content>
        <beginButton>
            <Button
                id="aboutDialogCloseButton"
                text="{i18n>closeBtn}"
                type="Transparent"
                press=".onClose" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
