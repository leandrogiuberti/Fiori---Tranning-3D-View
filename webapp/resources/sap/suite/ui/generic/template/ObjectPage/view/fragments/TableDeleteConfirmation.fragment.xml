<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="deleteConfirmationDialog" title="{delete>/title}" class="sapUiContentPadding" state="Warning" ariaLabelledBy="deleteText">
		<content>
			<VBox>
				<Text id="deleteText" text="{delete>/text}" renderWhitespace="true"/>
				<Text id="undeletableText" text="{delete>/undeletableText}"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>DELETE}"
					visible="{= ${delete>/tableMode} !== 'Delete' || ${delete>/undeletableCount} === 0 }"
					press="onDelete"
					type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="{= (${delete>/tableMode} !== 'Delete' || ${delete>/undeletableCount} === 0) ? ${i18n>CANCEL} : ${i18n>CLOSE} }"
					press="onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>
