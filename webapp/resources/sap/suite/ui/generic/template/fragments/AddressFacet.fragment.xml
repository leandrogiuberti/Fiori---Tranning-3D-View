<core:FragmentDefinition xmlns:sfi="sap.ui.comp.smartfield" xmlns="sap.m" xmlns:core="sap.ui.core"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
	template:require="{AH: 'sap/suite/ui/generic/template/js/AnnotationHelper', AHModel: 'sap/ui/model/odata/AnnotationHelper'}">

	<VBox displayInline="true"
	      binding="{parts: [{path: 'facet>Target'}, {path: 'entitySet>'}], formatter: 'AH.getNavigationPathWithExpand'}" >
		 <template:if test="{facet>Label}">
			<sfi:SmartLabel id="{:= ${parameter>/stableId}.getStableId({ type:'ObjectPageSection', subType:'AddressLabel', sFacet: ${facetId>id}}) }"
			                text="{path: 'facet>Label', formatter: 'AHModel.format'}:"
			                labelFor="{:= ${parameter>/stableId}.getStableId({ type:'ObjectPageSection', subType:'AddressValue', sFacet: ${facetId>id}}) }"/>
		</template:if>
	</VBox>
</core:FragmentDefinition>
