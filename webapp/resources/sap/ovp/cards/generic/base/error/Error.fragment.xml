<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
>
    <template:if test="{= ${ovpCardProperties>/errorStatusText} &amp;&amp; !${ovpCardProperties>/sTitle}}">
        <template:then>
        <Page
            id="sapOvpErrorCard"
            showHeader="false"
            class="{= ${ovpCardProperties>/oldTemplate} === 'sap.ovp.cards.stack' ? 'stackContentOfError' : 'contentOfError' }">
           <content>
                <VBox alignItems="Center" justifyContent="Center" height="100%">
                    <core:Icon src="{ovpCardProperties>/sMessageIcon}" class="sapUiLargeMarginTop" />
                    <Title text="{ovpCardProperties>/errorStatusText}" />
                    <Text text="{ovpCardProperties>/errorDescription}" />
                </VBox>
            </content>
        </Page>
        </template:then>
        <template:else>
            <IllustratedMessage
                id="sapOvpErrorCard"  
                illustrationType="{ovpCardProperties>/sIllustration}"
                title="{ovpCardProperties>/sTitle}"
                description="{ovpCardProperties>/sDescription}"
                enableDefaultTitleAndDescription="false"
                enableVerticalResponsiveness="true"
                class="{= ${ovpCardProperties>/oldTemplate} === 'sap.ovp.cards.stack' ? 'stackContentOfError' : 'contentOfError' }" 
            />
        </template:else>
    </template:if>
</core:FragmentDefinition>
