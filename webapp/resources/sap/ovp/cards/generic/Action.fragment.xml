<core:FragmentDefinition
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
    template:require="{
		ModelAnnotationhelper: 'sap/ui/model/odata/AnnotationHelper'
	}"    
>
    <template:if test="{=  ${dataField>RecordType} === 'com.sap.vocabularies.UI.v1.DataFieldForAction' ||
                           ${dataField>RecordType} === 'com.sap.vocabularies.UI.v1.DataFieldForIntentBasedNavigation'||
                           ${dataField>RecordType} === 'com.sap.vocabularies.UI.v1.DataFieldWithUrl'}">
        <Button
            text="{path: 'dataField>Label', formatter: 'ModelAnnotationhelper.format'}"
            press="onActionPress" 
            type="Transparent">
            <layoutData>
                <OverflowToolbarLayoutData />
            </layoutData>
            <customData>
                <core:CustomData key="type" value="{dataField>RecordType}"/>
                <template:if test="{= ${dataField>SemanticObject}}">
                    <core:CustomData 
                        key="semanticObject"
                        value="{path: 'dataField>SemanticObject', formatter: 'ModelAnnotationhelper.format'}"/>
                </template:if>
                <template:if test="{= ${dataField>Url}}">
                    <core:CustomData 
                        key="url"
                        value="{path: 'dataField>Url', formatter: 'ModelAnnotationhelper.format'}"/>
                </template:if>
                <template:if test="{= ${dataField>Action}}">
                <core:CustomData 
                    key="action"
                    value="{path: 'dataField>Action', formatter: 'ModelAnnotationhelper.format'}"/>
                </template:if>
                <core:CustomData 
                    key="label"
                    value="{path: 'dataField>Label', formatter: 'ModelAnnotationhelper.format'}"/>
            </customData>
        </Button>
    </template:if>
</core:FragmentDefinition>