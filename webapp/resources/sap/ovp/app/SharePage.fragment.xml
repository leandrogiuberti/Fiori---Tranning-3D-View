<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core">
	<Menu>
        <MenuItem 
			id="ShareEmailButton"
			icon="sap-icon://email"
			press="shareEmailPressed"
			text="{ovplibResourceBundle>Email_Text}"
			class="sapMFlexBox"/>
        <MenuItem 
			id="shareJamButton"
			icon="sap-icon://share-2"
			press="shareJamPressed"
			text="{ovplibResourceBundle>share_jam}"
			class="sapMFlexBox"
			visible="{ui>/jamVisible}"/>
        <MenuItem 
			id="BookmarkButton"
			icon="{ui>/tileIcon}"
			press="shareTilePressed"
			text="{ui>/tileText}"
			visible="{ui>/tileVisible}" 
			class="sapMFlexBox"/>
    </Menu>
</core:FragmentDefinition>
