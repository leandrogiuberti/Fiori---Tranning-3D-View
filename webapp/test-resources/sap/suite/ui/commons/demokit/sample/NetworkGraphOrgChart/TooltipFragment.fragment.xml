<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView id="quickView">
		<QuickViewPage
				header="Employee"
				title="{/title}"
				description="{/description}">
			<QuickViewGroup heading="Contact detail">
				<QuickViewGroupElement
						label="Location"
						value="{/location}"/>
				<QuickViewGroupElement
						label="Mobile"
						value="{/phone}"
						type="mobile"/>
				<QuickViewGroupElement
						label="Email"
						value="{/email}"
						emailSubject="Subject"
						type="email"/>
			</QuickViewGroup>
			<QuickViewGroup visible="{/showTeam}" heading="Team">
				<QuickViewGroupElement
						label="Size"
						value="{/teamSize}" />
			</QuickViewGroup>
			<avatar>
				<Avatar src="{/icon}" displayShape="Square"/>
			</avatar>
		</QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
