<mvc:View
		controllerName="sap.gantt.sample.GanttChart2CustomShape.Gantt"
		height="100%"
		xmlns="sap.gantt.simple"
		xmlns:axistime="sap.gantt.axistime"
		xmlns:config="sap.gantt.config"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:my="sap.gantt.sample.GanttChart2CustomShape"
		xmlns:table="sap.ui.table"
		xmlns:rm="sap.ui.table.rowmodes">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar showSearchButton="false"/>
		</toolbar>
		<GanttChartWithTable id="gantt" shapeSelectionMode="Single">
			<axisTimeStrategy>
				<axistime:ProportionZoomStrategy>
					<axistime:totalHorizon>
						<config:TimeHorizon
								startTime="20171001000000"
								endTime="20191129000000"/>
					</axistime:totalHorizon>
					<axistime:visibleHorizon>
						<config:TimeHorizon
								startTime="20181001000000"
								endTime="20181129000000"/>
					</axistime:visibleHorizon>
				</axistime:ProportionZoomStrategy>
			</axisTimeStrategy>
			<table>
				<table:TreeTable
						selectionMode="Single"
						selectionBehavior="RowSelector"
						enableColumnReordering="true"
						rows="{
						path: '/root',
						parameters: {
							arrayNames: ['children'],
							numberOfExpandedLevels: 1
						}
					}">
					<table:columns>
						<table:Column>
							<m:Text text=""/>
							<table:template>
								<m:Label text="{text}"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:rowMode>
						<rm:Auto minRowCount="12"/>
					</table:rowMode>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{id}" shapes1="{path: 'shapes', templateShareable: true}">
							<shapes1>
								<my:CustomShape time="{path: 'startTime', formatter: '.fnTimeConverter'}"
												endTime="{path: 'endTime', formatter: '.fnTimeConverter'}" strokeWidth="3"
												fill="{= ${type} === 1 ? '@sapUiChartPaletteQualitativeHue5' : '@sapContent_ContrastIconColor'}" type="{type}"
												stroke="{= ${type} === 2 ? '@sapUiChartPaletteQualitativeHue6' : 'none' }"/>
							</shapes1>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:TreeTable>
			</table>
		</GanttChartWithTable>
	</GanttChartContainer>
</mvc:View>