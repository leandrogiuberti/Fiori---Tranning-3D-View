<mvc:View
		controllerName="sap.gantt.sample.GanttChart2Calendar.Gantt"
		height="100%"
		xmlns="sap.gantt.simple"
		xmlns:axistime="sap.gantt.axistime"
		xmlns:config="sap.gantt.config"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:shapes="sap.gantt.simple.shapes"
		xmlns:cal="sap.gantt.def.cal"
		xmlns:table="sap.ui.table"
		xmlns:gnt2="sap.gantt.simple"
		xmlns:rm="sap.ui.table.rowmodes">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar showSearchButton="false"/>
		</toolbar>
		<GanttChartWithTable id="gantt" shapeSelectionMode="Single">
			<axisTimeStrategy>
				<axistime:ProportionZoomStrategy>
					<axistime:totalHorizon>
						<config:TimeHorizon
								startTime="20181001000000"
								endTime="20181229000000"/>
					</axistime:totalHorizon>
					<axistime:visibleHorizon>
						<config:TimeHorizon
								startTime="20181001000000"
								endTime="20181229000000"/>
					</axistime:visibleHorizon>
				</axistime:ProportionZoomStrategy>
			</axisTimeStrategy>
			<table>
				<table:TreeTable
						selectionMode="Single"
						selectionBehavior="RowSelector"
						enableColumnReordering="true"
						rows="{
						path: '/root',
						parameters: {
							arrayNames: ['children'],
							numberOfExpandedLevels: 1
						}
					}">
					<table:columns>
						<table:Column>
							<m:Text text="Type"/>
							<table:template>
								<m:Label text="{text}"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:rowMode>
						<rm:Auto minRowCount="12"/>
					</table:rowMode>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{id}" shapes1="{path: 'project', templateShareable:false}"
										  shapes2="{path: 'tasks', templateShareable:false}"
										  calendars="{path:'WorkingTimes', templateShareable: true}">
							<shapes1>
								<shapes:Task time="{path: 'startTime', formatter: '.fnTimeConverter'}" selectable="true"
											 endTime="{path: 'endTime', formatter: '.fnTimeConverter'}"
											 type="SummaryExpanded"/>
							</shapes1>
							<shapes2>
								<shapes:Task time="{path: 'startTime', formatter: '.fnTimeConverter'}" selectable="true"
											 endTime="{path: 'endTime', formatter: '.fnTimeConverter'}"/>
							</shapes2>
							<calendars>
								<BaseCalendar title="{title}" horizontalTextAlignment="Middle" fontFamily="{fontFamily}" calendarName="{path: 'CalendarName'}"/>
							</calendars>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:TreeTable>
			</table>
			<calendarDef>
				<cal:CalendarDefs>
					<cal:defs>
						<cal:Calendar key="workingDays" backgroundColor="{path: '/testingColor', formatter: '.fnLessValueConvert'}">
							<cal:TimeInterval startTime="20181215000000" endTime="20181227170000" />
						</cal:Calendar>
						<cal:Calendar key="shiftedWorkingDays">
							<cal:TimeInterval startTime="20181111090000" endTime="20181205170000" />
						</cal:Calendar>
					</cal:defs>
				</cal:CalendarDefs>
			</calendarDef>
		</GanttChartWithTable>
	</GanttChartContainer>
</mvc:View>
