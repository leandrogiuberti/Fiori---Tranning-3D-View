<mvc:View
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:grid="sap.ui.layout.cssgrid"
    controllerName="sap.ushell.playground.controller.ContentFinderStandalone"
    core:require="{
        ushellLibrary: 'sap/ushell/library'
    }">

    <Page
        title="ContentFinder Standalone"
        class="sapUiResponsiveContentPadding"
        visible="{/showActualResponse}">

        <headerContent>
            <Button text="Empty Response demo" press=".toggleEmptyResponse"></Button>
        </headerContent>
        <headerContent>
            <Button text="Error on Request demo" press=".toggleErrorResponse"></Button>
        </headerContent>
        <headerContent>
            <Button text="Response Actual" press=".toggleActualResponse"></Button>
        </headerContent>
        <headerContent>
            <Button text="Error on pagination Request demo" press=".toggleErrorResponseOnPagination"></Button>
        </headerContent>

        <core:ComponentContainer
            id="appSearchComponentContainer"
            name="sap.ushell.components.contentFinderStandalone"
            height="100%"
            componentCreated="appSearchComponentCreated"
            async="true"
        />

    </Page>

</mvc:View>
