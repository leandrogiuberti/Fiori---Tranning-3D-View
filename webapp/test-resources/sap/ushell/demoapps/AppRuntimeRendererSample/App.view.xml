<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.AppRuntimeRendererSample.App">
    <App>
        <Page title="App Runtime Renderer API Sample">
            <content>
                <Panel>
                    <Button id="idSetHeaderTitleBtn" text="Renderer.setHeaderTitle" press="onSetHeaderTitle"
                        class="idSetHeaderTitleBtn"/>
                    <Input id="idTitle" type="Text" value="New Header for FLP Window" />
                </Panel>
                <Panel>
                    <Button id="idHideHeaderTitleBtn" text="Renderer.setHeaderVisibility(false)" press="onHideHeader" />
                    <Button id="idShowHeaderTitleBtn" text="Renderer.setHeaderVisibility(true)" press="onShowHeader" />
                </Panel>
                <Panel>
                    <Button id="idCreateHeaderBtn" text="Renderer.addHeaderItem" press="onCreateBtn" />
                    <Button id="idRemoveHeaderBtn" text="Renderer.hideHeaderItem" press="onRemoveBtn" />
                    <Button id="idShowHeaderBtn" text="Renderer.showHeaderItem" press="onShowBtn" />
                </Panel>
                <Panel>
                    <Button id="idCreateEndHeaderBtn" text="Renderer.addHeaderEndItem" press="onCreateEndBtn" />
                    <Button id="idRemoveEndHeaderBtn" text="Renderer.hideHeaderEndItem" press="onRemoveEndBtn" />
                    <Button id="idShowEndHeaderBtn" text="Renderer.showHeaderEndItem" press="onShowEndBtn" />
                </Panel>
                <Panel>
                    <Button id="idCreateShellItemBtn" text="new sap.ushell.ui.shell.ShellHeadItem" press="onCreateShellItem" />
                    <Button id="idShowShellItemBtn" text="Renderer.showHeaderItem" press="onShowShellItem" />
                    <Button id="idHideShellItemBtn" text="Renderer.hideHeaderItem" press="onHideShellItem" />
                    <Button id="idShowShellItemEndBtn" text="Renderer.showHeaderEndItem" press="onShowShellItemEnd" />
                    <Button id="idHideShellItemEndBtn" text="Renderer.hideHeaderEndItem" press="onHideShellItemEnd" />
                </Panel>
                <Panel>
                    <Button id="idAddUserActionBtn" text="Renderer.addUserAction" press="onAddUserAction" />
                    <Button id="idShowActionButtonBtn" text="Renderer.showActionButton" press="onShowActionButton" />
                    <Button id="idHideActionButtonBtn" text="Renderer.hideActionButton" press="onHideActionButton" />
                </Panel>
                <Panel>
                    <Input id="idNumber1" type="Text" value="10" />
                    <Text text="+" />
                    <Input id="idNumber2" type="Text" value="20" />
                    <Text text="=" />
                    <Input id="idResult" type="Text" />
                </Panel>
            </content>
        </Page>
    </App>
</mvc:View>
