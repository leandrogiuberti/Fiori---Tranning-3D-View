<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.AppLetterBoxing.App">
    <App>
        <Page title="{i18n>title}">
            <content>
                <Panel>
                    <MessageStrip
                        text="{i18n>deprecationWarning}"
                        type="Warning"
                        showIcon="true"
                        class="sapUiMediumMarginBottom" />
                    <List id="letterBoxing" noDataText="">
                        <CustomListItem>
                            <Button
                                id="idChangeLetterBoxButtonDeprecated"
                                class="letterboxingBtn idQunitChangeLetterBoxButton"
                                text="Change letterBoxing (deprecated)"
                                press="onChangeLetterBoxingDeprecated"
                                icon="sap-icon://change" />
                        </CustomListItem>
                        <CustomListItem>
                            <Button
                                id="idChangeLetterBoxButton"
                                class="letterboxingBtn idQunitChangeLetterBoxButton"
                                text="Change letterBoxing"
                                press="onChangeLetterBoxing"
                                icon="sap-icon://change" />
                        </CustomListItem>
                    </List>
                </Panel>
            </content>
        </Page>
    </App>
</mvc:View>
