<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ushell.demo.AppPersSample2.App">
    <VBox>
        <Panel headerText="Sample Application for Personalization: Case 2: Table">
            <Table id="SampleTableMobile" headerText="Table header" showSeparators="Inner" items="{/rows}">
                <headerToolbar>
                    <Toolbar>
                        <Label text="Test Table for Personalization" />
                        <ToolbarSpacer />
                        <Button id="personalize" icon="sap-icon://table-view" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="column1" width="100px">
                        <Label text="Column 1" />
                    </Column>
                    <Column id="column2" width="150px">
                        <Label text="Column 2" />
                    </Column>
                    <Column id="column3" width="200px">
                        <Label text="Column 3" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{cell1}" />
                            <Text text="{cell2}" />
                            <Text text="{cell3}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </VBox>
</mvc:View>
