<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:codeeditor="sap.ui.codeeditor"
    controllerName="sap.ushell.demoapps.ReceiveParametersTestApp.Main">
    <Page showHeader="false">
        <content>
            <layout:Grid
                class="sapUiSmallMarginTop"
                hSpacing="2"
                defaultSpan="L6 M12 S12">
                <layout:content>
                    <VBox class="sapUiSmallMarginTop">
                        <Title
                            text="Received AppState (JSON.stringified)"
                            titleStyle="H4" />
                        <codeeditor:CodeEditor
                            editable="false"
                            width="40em"
                            height="30em"
                            value="{AppState>/appstate}" />
                    </VBox>
                    <Table
                        headerText="Application Startup Parameters"
                        noDataText="No startup parameters passed"
                        items="{startupParameters>/parameters}">
                        <columns>
                            <Column width="30%">
                                <Text text="Name" />
                            </Column>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Value" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{startupParameters>key}" />
                                    <Text text="{startupParameters>value}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </layout:content>
            </layout:Grid>
        </content>
    </Page>
</mvc:View>
