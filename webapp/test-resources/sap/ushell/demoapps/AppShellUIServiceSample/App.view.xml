<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    controllerName="sap.ushell.demo.AppShellUIServiceSample.App"
    height="100%">
    <ScrollContainer class="sapUiContentPadding" height="100%" width="100%" horizontal="false" vertical="true" focusable="true">
        <Toolbar height="2rem" class="sapUiSmallMarginTop">
            <Title text="About" />
        </Toolbar>
        <TextArea id="infoArea" width="100%" rows="15" editable="false" value="{/introText}" />
        <Toolbar height="3rem" class="sapUiSmallMarginTop">
            <Title text="General Settings" />
        </Toolbar>
        <FlexBox alignItems="Center" justifyContent="Start">
            <items>
                <Switch state="true" change="onUseInjectedServiceChange" class="sapUiSmallMarginEnd" />
                <Label text="{/currentStateText}" />
            </items>
        </FlexBox>
        <Toolbar height="3rem" class="sapUiSmallMarginTop">
            <Title text="ShellUIService#setTitle" />
        </Toolbar>
        <VBox>
            <FlexBox alignItems="Center" justifyContent="Start">
                <items>
                    <Button text="Go Home" press="btnGoHomePressed" class="sapUiSmallMarginEnd" />
                    <Button text="Go to #Action-toappnavsample" press="btnGoToAppNavSample" />
                </items>
            </FlexBox>
            <form:Form width="20em" id="setTitleAdditionalInfo" class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                <form:layout>
                    <form:ResponsiveGridLayout />
                </form:layout>
                <form:formContainers>
                    <form:FormContainer>
                        <form:formElements>
                            <form:FormElement label="title">
                                <form:fields>
                                     <Input id="setTitleTitle" value="{/setTitleTitle}" placeholder="[undefined]"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="headerText">
                                <form:fields>
                                    <Input id="setTitleAdditionalInfoHeaderText" value="{/setTitleAdditionalInfo/headerText}" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="additionalContext">
                                <form:fields>
                                    <Input id="setTitleAdditionalInfoAdditionalContext" value="{/setTitleAdditionalInfo/additionalContext}" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="searchTerm">
                                <form:fields>
                                    <Input id="setTitleAdditionalInfoSearchTerm" value="{/setTitleAdditionalInfo/searchTerm}" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="searchScope">
                                <form:fields>
                                    <Input id="setTitleAdditionalInfoSearchScope" value="{/setTitleAdditionalInfo/searchScope}" />
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement label="windowTitleExtension (ushell config)">
                                <form:fields>
                                    <Input id="setTitleWindowTitleExtension" change="onWindowTitleExtensionChange" />
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
            <Button id="setTitleButton" press="btnSetTitlePressed" icon="sap-icon://{/setTitleIcon}" text="{/setTitleText}" />
        </VBox>
        <Toolbar height="3rem" class="sapUiSmallMarginTop">
            <Title text="ShellUIService#setHierarchy and ShellUIService#setRelatedApps" />
        </Toolbar>
        <FlexBox class="sapUiSmallMarginTop">
            <items>
                <form:Form width="16em" id="setHierarchyRelatedAppsForm">
                    <form:layout>
                        <form:ResponsiveGridLayout />
                    </form:layout>
                    <form:formContainers>
                        <form:FormContainer>
                            <form:formElements>
                                <form:FormElement label="Title">
                                    <form:fields>
                                        <Input id="setHierarchyRelatedAppsTitle" value="{/setHierarchyRelatedAppsFormItem/title}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Subtitle">
                                    <form:fields>
                                        <Input id="setHierarchyRelatedAppsSubtitle" value="{/setHierarchyRelatedAppsFormItem/subtitle}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Icon">
                                    <form:fields>
                                        <Input id="setHierarchyRelatedAppsIcon" value="{/setHierarchyRelatedAppsFormItem/icon}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement label="Intent">
                                    <form:fields>
                                        <Input id="setHierarchyRelatedAppsIntent" value="{/setHierarchyRelatedAppsFormItem/intent}" />
                                    </form:fields>
                                </form:FormElement>
                                <form:FormElement>
                                    <HBox>
                                        <Button icon="sap-icon://add" press="btnAddHierarchyEntryPressed" class="sapUiSmallMarginEnd" />
                                        <Button
                                            enabled="{/setHierarchyRelatedAppsFormSaveEnabled}"
                                            icon="sap-icon://save"
                                            press="btnSaveHierarchyEntryPressed"
                                            class="sapUiSmallMarginEnd" />
                                        <Button
                                            enabled="{/setHierarchyRelatedAppsFormDeleteEnabled}"
                                            icon="sap-icon://delete"
                                            press="btnDeleteHierarchyEntryPressed" />
                                    </HBox>
                                </form:FormElement>
                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>
                <VBox>
                    <table:TreeTable
                        id="setHierarchyRelatedAppsTable"
                        visibleRowCount="5"
                        class="sapUiSmallMarginEnd sapUiSmallMarginBegin"
                        rowSelectionChange="onSetHierarchyRowSelectionChange"
                        rows="{ path: '/', parameters: { arrayNames: ['setHierarchyRelatedAppsArg'] } }"
                        selectionMode="Single"
                        enableSelectAll="false"
                        editable="false">
                        <table:columns>
                            <table:Column>
                                <Label text="Title" />
                                <table:template>
                                    <Text text="{title}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <Label text="Icon" />
                                <table:template>
                                    <core:Icon src="{icon}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <Label text="Subtitle" />
                                <table:template>
                                    <Text text="{subtitle}" />
                                </table:template>
                            </table:Column>
                            <table:Column>
                                <Label text="Intent" />
                                <table:template>
                                    <Text text="{intent}" />
                                </table:template>
                            </table:Column>
                        </table:columns>
                    </table:TreeTable>
                    <FlexBox alignItems="Right" justifyContent="End" class="sapUiSmallMarginTop sapUiSmallMarginEnd">
                        <items>
                            <RadioButton id="radioHierarchy" groupName="shellUIServiceMethod" text="Hierarchy" selected="true" />
                            <RadioButton
                                id="radioRelatedApps"
                                groupName="shellUIServiceMethod"
                                text="Related Apps"
                                selected="false"
                                class="sapUiSmallMarginEnd" />
                            <Button
                                text="Set"
                                icon="sap-icon://save"
                                press="btnSetHierarchyRelatedAppsPressed"
                                class="sapUiSmallMarginEnd" />
                            <Button text="Clear" icon="sap-icon://eraser" press="btnClearHierarchyRelatedAppsPressed" />
                        </items>
                    </FlexBox>
                </VBox>
            </items>
        </FlexBox>
    </ScrollContainer>
</mvc:View>
