<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="sap.ushell.demo.UI5brokerClientSample.App">
    <Panel>
        <content>
            <core:HTML content='&lt;!DOCTYPE html&gt;
                &lt;html lang=&quot;en&quot;&gt;
                &lt;head&gt;
                    &lt;meta charset=&quot;UTF-8&quot;&gt;
                &lt;/head&gt;
                &lt;body id=&quot;wrapper&quot;&gt;
                &lt;input id=&quot;txtMessageId&quot; type=&quot;hidden&quot;/&gt;
                &lt;div id=&quot;group1&quot;&gt;
                    &lt;fieldset&gt;
                        &lt;legend&gt;Client Connection Information:&lt;/legend&gt;
                        &lt;div&gt;
                            &lt;label&gt;My client id:&lt;/label&gt;
                            &lt;select id=&quot;txtClientId&quot;&gt;
                                &lt;option&gt;AppUI5&lt;/option&gt;
                                &lt;option selected=&quot;selected&quot;&gt;AppRuntime&lt;/option&gt;
                                &lt;option&gt;AppHTML&lt;/option&gt;
                                &lt;option&gt;Plugin1&lt;/option&gt;
                                &lt;option&gt;Plugin2&lt;/option&gt;
                            &lt;/select&gt;
                            &lt;button id=&quot;btnBrokerConnect&quot;&gt;Connect&lt;/button&gt;
                            &lt;button id=&quot;btnBrokerDisconnect&quot;&gt;Disconnect&lt;/button&gt;
                            &lt;label id=&quot;txtStatusId&quot;&gt;Not connected&lt;/label&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Supported channels:&lt;/label&gt;
                            &lt;input id=&quot;txtChannels&quot; type=&quot;text&quot; value=&quot;math,app.context,app.screenshot&quot;/&gt;
                            &lt;button id=&quot;btnSubscribe&quot;&gt;Subscribe&lt;/button&gt;
                            &lt;button id=&quot;btnUnsubscribe&quot;&gt;Unsubscribe&lt;/button&gt;
                        &lt;/div&gt;
                    &lt;/fieldset&gt;
                    &lt;fieldset&gt;
                        &lt;legend&gt;Publish Message:&lt;/legend&gt;
                        &lt;div&gt;
                            &lt;label&gt;To client:&lt;/label&gt;
                            &lt;select id=&quot;txtTargetClientId&quot;&gt;
                                &lt;option selected=&quot;selected&quot;&gt;*&lt;/option&gt;
                                &lt;option&gt;AppUI5&lt;/option&gt;
                                &lt;option&gt;AppRuntime&lt;/option&gt;
                                &lt;option&gt;AppHTML&lt;/option&gt;
                                &lt;option&gt;Plugin1&lt;/option&gt;
                                &lt;option&gt;Plugin2&lt;/option&gt;
                            &lt;/select&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;In channel:&lt;/label&gt;
                            &lt;input id=&quot;txtChannelId&quot; type=&quot;text&quot; value=&quot;math&quot;/&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Message name:&lt;/label&gt;
                            &lt;input id=&quot;txtMessageName&quot; type=&quot;text&quot; value=&quot;add&quot;/&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Data:&lt;/label&gt;
                            &lt;textarea id=&quot;txtMessage&quot; rows=&quot;6&quot;&gt;&lt;/textarea&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;&lt;/label&gt;
                            &lt;button id=&quot;btnSendMessage&quot;&gt;Publish Message&lt;/button&gt;
                        &lt;/div&gt;
                    &lt;/fieldset&gt;
                    &lt;fieldset&gt;
                        &lt;legend&gt;Message/Response Received:&lt;/legend&gt;
                        &lt;input id=&quot;txtFromMessageId&quot; type=&quot;hidden&quot;/&gt;
                        &lt;div&gt;
                            &lt;label&gt;From client:&lt;/label&gt;
                            &lt;input id=&quot;txtFromClientId&quot; type=&quot;text&quot; readonly/&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Message channel:&lt;/label&gt;
                            &lt;input id=&quot;txtFromChannelId&quot; type=&quot;text&quot; readonly/&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Message name:&lt;/label&gt;
                            &lt;input id=&quot;txtFromMessageName&quot; type=&quot;text&quot; readonly/&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Data:&lt;/label&gt;
                            &lt;textarea id=&quot;txtFromMessage&quot; rows=&quot;6&quot;&gt;&lt;/textarea&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;Response Data:&lt;/label&gt;
                            &lt;textarea id=&quot;txtResponse&quot; rows=&quot;6&quot;&gt;&lt;/textarea&gt;
                        &lt;/div&gt;
                        &lt;div&gt;
                            &lt;label&gt;&lt;/label&gt;
                            &lt;button id=&quot;btnSendResponse&quot;&gt;Send Response&lt;/button&gt;
                        &lt;/div&gt;
                    &lt;/fieldset&gt;
                &lt;/div&gt;
                &lt;div id=&quot;group2&quot;&gt;
                    &lt;fieldset&gt;
                        &lt;legend&gt;Log&lt;/legend&gt;
                        &lt;textarea id=&quot;txtLog&quot; rows=&quot;45&quot; style=&quot;width:99%&quot;&gt;&lt;/textarea&gt;
                        &lt;button id=&quot;btnClearLog&quot;&gt;Clear Log&lt;/button&gt;
                    &lt;/fieldset&gt;
                &lt;/div&gt;
                &lt;/div&gt;
                &lt;script src=&quot;app.js&quot;&gt;&lt;/script&gt;
                &lt;/body&gt;
                &lt;/html&gt;'>
            </core:HTML>
        </content>
    </Panel>
</mvc:View>
