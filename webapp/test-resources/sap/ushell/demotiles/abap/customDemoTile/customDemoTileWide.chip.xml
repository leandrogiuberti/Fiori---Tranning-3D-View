<?xml version="1.0" encoding="UTF-8"?>
<chip xmlns="http://schemas.sap.com/sapui2/services/Chip/1">
    <implementation>
        <sapui5>
            <basePath>./</basePath> <!-- relative to CHIP Definition XML -->
            <viewName virtualNamespace="true">sap.ushell.demotiles.abap.customDemoTile/CustomDemoTile.view.xml</viewName>
        </sapui5>
    </implementation>
    <appearance>
        <title>Custom Demo Tile Wide for Different Display Formats</title>
        <description>This is a wide custom demo tile which demonstrates virtual namespace and display formats</description>
    </appearance>
    <contracts>
        <consume id="configuration">
            <parameters>
                <parameter name="tileConfiguration" />
                <parameter name="row">1</parameter>
                <parameter name="col">2</parameter>
            </parameters>
        </consume>
        <consume id="configurationUi" />
        <consume id="writeConfiguration" />
        <consume id="preview" />
        <consume id="search" />
        <consume id="bag" />
        <consume id="url" />
        <consume id="types">
            <parameters>
                <parameter name="supportedTypes">tile,link,flat,flatWide</parameter>
                <parameter name="defaultType">tile</parameter>
            </parameters>
        </consume>
    </contracts>
</chip>
