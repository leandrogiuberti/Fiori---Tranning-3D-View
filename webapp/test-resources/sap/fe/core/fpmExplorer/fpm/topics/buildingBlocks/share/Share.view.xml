<mvc:View
	controllerName="sap.fe.core.fpmExplorer.shareDefault.Share"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:macros="sap.fe.macros"
	xmlns:macrosShare="sap.fe.macros.share"
>
	<VBox>
		<!-- using sap.fe Share -->
		<Panel width="auto" class="sapUiResponsiveMargin" headerText="Default Share Building Block" backgroundDesign="Translucent">
			<macros:Share id="share" />
		</Panel>
		<Panel
			width="auto"
			class="sapUiResponsiveMargin"
			headerText="Share Building Block with static property values"
			backgroundDesign="Translucent"
		>
			<FlexBox alignItems="Start" justifyContent="SpaceBetween">
				<macros:Share id="shareWithStaticProperties">
					<macros:shareOptions>
						<macrosShare:ShareOptions showSendEmail="false" />
					</macros:shareOptions>
				</macros:Share>
			</FlexBox>
		</Panel>
		<Panel
			width="auto"
			class="sapUiResponsiveMargin"
			headerText="Share Building Block with dynamic property values"
			backgroundDesign="Translucent"
		>
			<FlexBox alignItems="Start" justifyContent="SpaceBetween">
				<CheckBox text="Show send email" selected="{testModel>/showSendEmail}" />
				<macros:Share id="shareWithDynamicProperties">
					<macros:shareOptions>
						<macrosShare:ShareOptions showSendEmail="{testModel>/showSendEmail}" />
					</macros:shareOptions>
				</macros:Share>
			</FlexBox>
		</Panel>
	</VBox>
</mvc:View>
