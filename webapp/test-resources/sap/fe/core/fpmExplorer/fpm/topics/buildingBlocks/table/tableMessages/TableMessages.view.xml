<mvc:View
	controllerName="sap.fe.core.fpmExplorer.tableMessages.TableMessages"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:macros="sap.fe.macros"
>
	<NavContainer id="wizardNavContainer">
		<pages>
			<Page id="mdcTablePageCustomActions" showHeader="false">
				<Panel headerText="Table with Messages">
					<macros:Table metaPath="/RootEntity/@com.sap.vocabularies.UI.v1.LineItem" readOnly="true" id="LineItemTableRowPress" />
					<Button press=".onAddMessage" text="Add error message" />
					<Button press=".onRemoveAll" text="Remove all messages" />
				</Panel>
			</Page>
		</pages>
	</NavContainer>
</mvc:View>
