<mvc:View
	height="100%"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:fpmExplorer="sap.fe.core.fpmExplorer.controls"
	controllerName="sap.fe.core.PageController"
>
	<fpmExplorer:Page
		title="Highlighting Lines"
		introduction="The Table building block enables you to add semantic highlights to line items in tables, based on their criticality."
		documentation="0d501b16e43d45d0a19ae54a3be883d3"
		editMode="true"
	>
		<fpmExplorer:sample>
			<core:Fragment fragmentName="sap.fe.core.fpmExplorer.tableHighlighting.Sample" type="XML" />
		</fpmExplorer:sample>
		<fpmExplorer:implementation>
			<fpmExplorer:ImplementationStep
				text="Add a LineItem criticality annotation for the line items of the entity type that is used by a table."
			>
				<fpmExplorer:CodeBlock>
					<fpmExplorer:CodeLink
						file="table/tableHighlighting/localService/service.cds"
						fileName="criticality.cds"
						start="annotate Travel with @UI.LineItem:"
						end="};"
					/>
					<fpmExplorer:CodeLink file="table/tableHighlighting/code/lineItems.xml" codeType="xml" />
				</fpmExplorer:CodeBlock>
			</fpmExplorer:ImplementationStep>
		</fpmExplorer:implementation>
	</fpmExplorer:Page>
</mvc:View>
