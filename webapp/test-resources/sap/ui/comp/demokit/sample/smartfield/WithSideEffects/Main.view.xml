<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:sf="sap.ui.comp.smartfield"
	xmlns:m="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:form="sap.ui.comp.smartform"
	controllerName="sap.ui.comp.sample.smartfield.WithSideEffects.Main"
	class="mainView"
	height="100%">
	<m:ScrollContainer id="content" height="100%" horizontal="false" vertical="true">
		<m:Title wrapping="true" wrappingType="Hyphenated" titleStyle="H3" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
				text="The validateFieldGroup event is raised on the control that lost the focus or 'enter' is hit and at least one field group was left. The event bubbles up the control hierarchy. In the example below, the forms are handling the event for their fields."/>
		<form:SmartForm id="smartForm"
						editable="true"
						class="sapUiMediumMarginBottom"
						title="SmartField with fieldGroupIDs set through SideEffects annotation. In real applications the onValidateFieldGroup is handled by FioriElements."
						validateFieldGroup=".onValidateFieldGroup">
			<form:layout>
				<form:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</form:layout>
			<form:Group title="Fields with a internally calculated value from SmartField set as fieldGroupIds. It is a random unique hash.">
				<form:GroupElement id="GE-smartFormCity">

					<sf:SmartField id="smartFormCity" value="{City}"/>

				</form:GroupElement>
				<form:GroupElement id="GE-smartFormCountry">

					<sf:SmartField id="smartFormCountry" value="{Country}"/>

				</form:GroupElement>
			</form:Group>
			<form:Group title="Result from onValidateFieldGroup handler">
				<form:GroupElement id="GE-smartFormDescription">

					<sf:SmartField id="smartFormDescription" editable="false" value="{Description}"/>

				</form:GroupElement>
			</form:Group>
		</form:SmartForm>
		<f:Form id="form"
			editable="true"
			class="sapUiMediumMarginTop"
			validateFieldGroup=".onValidateFieldGroup">
			<f:title>
				<core:Title text="Input Fields with fieldGroupIDs only. The onValidateFieldGroup should be handled by the application developer." />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="2"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="Fields with a 'FormGroup' value set as fieldGroupIds. The fieldGroup value is set by the application developer.">
					<f:formElements>
						<f:FormElement label="City">
							<f:fields>
								<m:Input id="formCity" fieldGroupIds="FormGroup" value="Tokyo"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Country">
							<f:fields>
								<m:Input id="formCountry" fieldGroupIds="FormGroup" value="Japan"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="Result from onValidateFieldGroup handler">
					<f:formElements>
						<f:FormElement label="Concatenated City and Country">
							<f:fields>
								<m:Input editable="false" id="formDescription" value=""/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</m:ScrollContainer>
</mvc:View>
